<dashboard theme="dark">
  <label>AppScopeClassicDashboard</label>
  <row>
    <panel>
      <title>SSHD which process was started</title>
      <table>
        <title>Table contains the information about user and proc</title>
        <search>
          <query>proc_start=true | rename procname as proc, username as user | table user proc _time</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>SSHD when ssh sesion started</title>
      <table>
        <title>Table contains the information about user and proc</title>
        <search>
          <query>proc_start=true AND procname="sshd"| rename username as user | table user  _time</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Alert when file is changed</title>
      <event>
        <title>Cribl Alert</title>
        <search ref="Cribl Alert"></search>
        <option name="list.drilldown">none</option>
      </event>
    </panel>
  </row>
    <label>SSh User dropdown</label>
    <search id="ssh_user_search">
      <query>
        proc_start=true "$username$"
      </query>
    </search>
    <fieldset>
        <input type="dropdown" token="username">
            <label>Select SSH user</label>
            <choice value="*">Any</choice>
            <search>
              <query>
                proc_start=true | stats count by username
              </query>
            </search>
            <fieldForValue>username</fieldForValue>
            <fieldForLabel>username</fieldForLabel>
        </input>
    </fieldset>
    <row>
        <event>
            <title>Example Results</title>
            <option name="count">50</option>
            <search base="ssh_user_search"></search>
        </event>
    </row>
</dashboard>